<Window x:Class="View.NuevaCategoria"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View"
        mc:Ignorable="d"
        Title="NuevaCategoria" Height="300" Width="400">
    <StackPanel >
        <StackPanel>
            <Label>ID</Label>
            <TextBox x:Name="txtId" IsReadOnly="True" Background="DarkGray" Foreground="White"/>
        </StackPanel>
        <StackPanel>
            <Label>Nombre</Label>
            <TextBox x:Name="txtNombre" />
        </StackPanel>
        <StackPanel>
            <Label>Descripcion</Label>
            <TextBox x:Name="txtDescripcion" />
        </StackPanel>
        <StackPanel>
            <Button Margin="5" Click="Grabar_Click">Grabar</Button>
            <Button Margin="5" Click="Cerrar_Click">Cerrar</Button>
            <Button Margin="5" Click="Eliminar_Click" x:Name="btnEliminar">Eliminar</Button>
        </StackPanel>
    </StackPanel>

</Window>
